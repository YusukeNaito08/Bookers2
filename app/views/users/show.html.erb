 <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
        <%= render 'users/user_info', user: @user, book: @book %>







      </div>

<div class= "col-md-8">
<h2>Books</h2>
<table class= "table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
 <tbody>
 <% @books.each do |book| %>
   <tr>
     <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
     <td><%=link_to  book_path(book.id) do %>
         <%=book.title%>
         <% end %></td>
     <td><%= book.body %></td>
     <% if user_signed_in? && current_user.id == @book.id %>
     <td><%= link_to "edit", edit_book_path(@book.id), class: "btn btn-success"  %></td>
     <td><%= link_to "dstroy", book_path(@book.id), method: :delete, class: "btn btn-danger" %></td>
     <% end %>
  </tr>
<% end %>
</tbody>
</table>
</diV>
















