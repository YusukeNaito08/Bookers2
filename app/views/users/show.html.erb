<div class="profile-container">
 <h1>User info</h1>
 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
 <%= @user.name %> 
 <%= @user.introduction %>
 <%=link_to "edit", edit_user_path %>
</div>




<h1>New book</h1>
<%=form_with model: @book, local: true do |f| %>
<h4>Title</h4>
<%=f.text_field :title %>
<h4>Opinion</h4>
<%=f.text_area :body %>
<%=f.submit 'Create book' %>
<% end %>

