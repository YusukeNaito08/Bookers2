<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
        <%= render 'books/user_info', user: @user, book: @book %>
      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Books</h2>
         <table class= "table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
             <tr>
             <% @books.each do |book| %>
               <td><%=link_to user_path(book.user.id) do %>
                 <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                 <% end %><td>
               <td><%=link_to  book_path(book.id) do %>
                 <%= book.title%>
                 <% end %></td>
               <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
  </div>
</main>







