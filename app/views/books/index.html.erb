 <div class= "container">
    <div class= "row">
      <div class= "col-3">
        <%= render 'books/user_info', user: @user, book: @book %>
       </div>

<div class= "col-8">
<h2>Books</h2>
<table class= "table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
 <tbody>
 <% @books.each do |book| %>
   <tr>
     <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
     <td><%=link_to  book_path(book.id) do %>
         <%=book.title%>
         <% end %></td>
     <td><%= book.body %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
