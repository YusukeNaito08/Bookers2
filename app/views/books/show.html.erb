<div class= "container">
    <div class= "row">
      <div class= "col-md-3">
       <%= render 'books/user_info', user: @user, book: @book %>
       </div>
<div class= "col-md-8">
<h1>Book detail</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <h3>Title</h3>
    <%= @book.title %>
  <h3>Opinion</h3>
    <%= @book.body %>
  <% if user_signed_in? && current_user.id == @book.user_id %>
    <%= link_to "編集", edit_book_path(@book.id) %>
    <%= link_to "削除", book_path(@book.id), method: :delete %>
  <% end %>
</div