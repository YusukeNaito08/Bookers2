<div class= "container">
    <div class= "row">
      <div class= "col-md-3">
       <%= render 'books/user_info', user: @user, book: @book %>
       </div>
<div class= "col-md-8">
  <table class="table">
    <thea>
    <tr>
      <th><h2>Book detail</h2></th>
      <th></th>
      <th></th>
    </tr>
    </thea>
    <tbody>
      <tr>
        <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
        <td><%= link_to "#{@book.user.name}",user_path(@user.id) %></td>
        <td><%= link_to  "#{@book.title }", book_path(@book.id) %></td>
        <td><%= @book.body %></td>
      <% if user_signed_in? && current_user.id == @book.user.id %>
        <td><%= link_to "edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
        <td><%= link_to "destroy", book_path, method: :delete, class: "btn btn-danger" %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>